<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - Tenant Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: #f7f9fc;
            min-height: 100vh;
            padding: 24px 0;
            color: #2d3748;
        }
        .profile-container {
            max-width: 960px;
            margin: 0 auto;
            padding: 0 16px;
        }
        .profile-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(42, 51, 83, 0.08);
            overflow: hidden;
            margin-bottom: 20px;
        }
        .profile-header {
            background: linear-gradient(135deg, #5b6df8 0%, #7c5bff 100%);
            color: white;
            padding: 32px;
            text-align: center;
        }
        .profile-avatar {
            width: 110px;
            height: 110px;
            border-radius: 30px;
            background: rgba(255,255,255,0.15);
            margin: 0 auto 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 46px;
            color: #fff;
            border: 1px solid rgba(255,255,255,0.25);
        }
        .profile-body {
            padding: 28px;
        }
        .nav-tabs {
            border: none;
            margin-bottom: 24px;
            gap: 8px;
        }
        .nav-tabs .nav-link {
            color: #4a5568;
            border: 1px solid #e2e8f0;
            padding: 10px 18px;
            font-weight: 600;
            border-radius: 10px;
            background: #f8fafc;
        }
        .nav-tabs .nav-link.active {
            color: #1a202c;
            border-color: #5b6df8;
            background: #e9ecff;
            box-shadow: 0 6px 18px rgba(91, 109, 248, 0.2);
        }
        .info-section {
            margin-bottom: 25px;
        }
        .info-section h5 {
            color: #667eea;
            font-weight: 600;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e9ecef;
        }
        .info-row {
            display: flex;
            padding: 12px 0;
            border-bottom: 1px solid #f8f9fa;
        }
        .info-label {
            font-weight: 600;
            color: #495057;
            min-width: 180px;
        }
        .info-value {
            color: #6c757d;
            flex: 1;
        }
        .btn-edit {
            background: linear-gradient(135deg, #5b6df8 0%, #7c5bff 100%);
            border: none;
            color: white;
            padding: 11px 30px;
            border-radius: 10px;
            font-weight: 600;
            box-shadow: 0 8px 24px rgba(91, 109, 248, 0.35);
        }
        .btn-edit:hover {
            transform: translateY(-2px);
            color: white;
        }
        .btn-send-otp {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 8px 20px;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }
        .btn-send-otp:hover {
            transform: translateY(-1px);
            color: white;
        }
        .btn-send-otp:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
        }
        .form-control {
            border-radius: 8px;
            border: 1px solid #dee2e6;
            padding: 10px 15px;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .back-link {
            color: white;
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
        }
        .back-link:hover {
            color: white;
            text-decoration: underline;
        }
        .status-badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: 600;
        }
        .status-active {
            background: #d4edda;
            color: #155724;
        }
        .password-section {
            background: #f8fafc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
            border: 1px dashed #e2e8f0;
        }
        .password-requirements {
            background: #e9ecff;
            padding: 15px;
            border-radius: 8px;
            margin: 15px 0;
            border-left: 4px solid #667eea;
        }
        .password-requirements h6 {
            color: #667eea;
            font-weight: 600;
            margin-bottom: 10px;
        }
        .requirement-item {
            font-size: 13px;
            color: #495057;
            margin: 5px 0;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .requirement-item.met {
            color: #22543d;
        }
        .requirement-item.unmet {
            color: #b22222;
        }
        .otp-section {
            display: none;
            background: #fff7e6;
            padding: 12px;
            border: 1px dashed #f0ad4e;
            border-radius: 8px;
            margin-top: 14px;
        }
        .otp-section.show {
            display: block;
        }
        .alert {
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <div style="margin-bottom: 20px;">
            <a href="/tenant/dashboard" class="back-link" style="margin-right: 15px;">
                <i class="fas fa-arrow-left"></i> Dashboard
            </a>
            <a href="/tenant/properties" class="back-link" style="margin-right: 15px;">
                <i class="fas fa-home"></i> Browse Properties
            </a>
            <a href="/tenant/applications" class="back-link">
                <i class="fas fa-file-alt"></i> My Applications
            </a>
        </div>

        {{#if success}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> {{success}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> {{error}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <h2>{{tenant.firstname}} {{tenant.lastname}}</h2>
                <p style="opacity: 0.9; margin: 0;">Tenant ID: {{tenant.tenantid}}</p>
                <span class="status-badge status-active" style="margin-top: 10px; display: inline-block;">
                    <i class="fas fa-check"></i> {{tenant.status}}
                </span>
            </div>

            <div class="profile-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#view" role="tab">
                            <i class="fas fa-eye"></i> View Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#edit" role="tab">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="view" role="tabpanel">
                        <div class="info-section">
                            <h5><i class="fas fa-user-circle"></i> Personal Information</h5>
                            <div class="info-row">
                                <div class="info-label">Full Name:</div>
                                <div class="info-value">{{tenant.firstname}} {{tenant.lastname}}</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Email:</div>
                                <div class="info-value">{{tenant.email}}</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Phone:</div>
                                <div class="info-value">{{tenant.phone}}</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Date of Birth:</div>
                                <div class="info-value">{{#if tenant.dob}}{{formatDate tenant.dob}}{{else}}Not provided{{/if}}</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Gender:</div>
                                <div class="info-value">{{#if tenant.gender}}{{tenant.gender}}{{else}}Not provided{{/if}}</div>
                            </div>
                        </div>

                        <div class="info-section">
                            <h5><i class="fas fa-briefcase"></i> Professional Details</h5>
                            <div class="info-row">
                                <div class="info-label">Occupation:</div>
                                <div class="info-value">{{#if tenant.occupation}}{{tenant.occupation}}{{else}}Not provided{{/if}}</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Company Name:</div>
                                <div class="info-value">{{#if tenant.companyName}}{{tenant.companyName}}{{else}}Not provided{{/if}}</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Current Address:</div>
                                <div class="info-value">{{#if tenant.currentAddress}}{{tenant.currentAddress}}{{else}}Not provided{{/if}}</div>
                            </div>
                        </div>

                        {{#if tenant.propertyId}}
                        <div class="info-section">
                            <h5><i class="fas fa-home"></i> Current Property</h5>
                            <div class="info-row">
                                <div class="info-label">Property:</div>
                                <div class="info-value">
                                    {{tenant.propertyId.propertyName}}<br>
                                    <small>{{tenant.propertyId.address}}, {{tenant.propertyId.city}}</small>
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Lease Period:</div>
                                <div class="info-value">
                                    {{#if tenant.leaseStartDate}}
                                        {{formatDate tenant.leaseStartDate}} to {{formatDate tenant.leaseEndDate}}
                                    {{else}}
                                        Not assigned
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        {{/if}}

                        {{#if tenant.emergencyContact}}
                        <div class="info-section">
                            <h5><i class="fas fa-phone-alt"></i> Emergency Contact</h5>
                            <div class="info-row">
                                <div class="info-label">Name:</div>
                                <div class="info-value">{{tenant.emergencyContact.name}}</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Phone:</div>
                                <div class="info-value">{{tenant.emergencyContact.phone}}</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Relationship:</div>
                                <div class="info-value">{{tenant.emergencyContact.relation}}</div>
                            </div>
                        </div>
                        {{/if}}
                    </div>

                    <div class="tab-pane fade" id="edit" role="tabpanel">
                        <form id="profileForm" method="POST" action="/tenant/profile/update">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <div class="info-section">
                                <h5><i class="fas fa-user-circle"></i> Personal Information</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">First Name *</label>
                                            <input type="text" class="form-control" name="firstname" value="{{tenant.firstname}}" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Last Name *</label>
                                            <input type="text" class="form-control" name="lastname" value="{{tenant.lastname}}" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Email *</label>
                                            <input type="email" class="form-control" name="email" value="{{tenant.email}}" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Phone *</label>
                                            <input type="tel" class="form-control" name="phone" value="{{tenant.phone}}" pattern="[0-9]{10}" title="10-digit phone number" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Date of Birth</label>
                                            <input type="date" class="form-control" name="dob" value="{{#if tenant.dob}}{{tenant.dob}}{{/if}}">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Gender</label>
                                            <select class="form-control" name="gender">
                                                <option value="">Select Gender</option>
                                                <option value="Male" {{#if (eq tenant.gender 'Male')}}selected{{/if}}>Male</option>
                                                <option value="Female" {{#if (eq tenant.gender 'Female')}}selected{{/if}}>Female</option>
                                                <option value="Other" {{#if (eq tenant.gender 'Other')}}selected{{/if}}>Other</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="info-section">
                                <h5><i class="fas fa-briefcase"></i> Professional Details</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Occupation</label>
                                            <input type="text" class="form-control" name="occupation" value="{{tenant.occupation}}">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Company Name</label>
                                            <input type="text" class="form-control" name="companyName" value="{{tenant.companyName}}">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Current Address</label>
                                    <textarea class="form-control" name="currentAddress" rows="3">{{tenant.currentAddress}}</textarea>
                                </div>
                            </div>

                            <div class="info-section">
                                <h5><i class="fas fa-phone-alt"></i> Emergency Contact</h5>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-label">Contact Name</label>
                                            <input type="text" class="form-control" name="emergencyContactName" value="{{#if tenant.emergencyContact}}{{tenant.emergencyContact.name}}{{/if}}">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-label">Contact Phone</label>
                                            <input type="tel" class="form-control" name="emergencyContactPhone" value="{{#if tenant.emergencyContact}}{{tenant.emergencyContact.phone}}{{/if}}" pattern="[0-9]{10}">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-label">Relationship</label>
                                            <input type="text" class="form-control" name="emergencyContactRelation" value="{{#if tenant.emergencyContact}}{{tenant.emergencyContact.relation}}{{/if}}">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="password-section">
                                <h5 style="color: #495057; margin-bottom: 15px;">
                                    <i class="fas fa-lock"></i> Change Password (Optional)
                                </h5>
                                <p style="color: #6c757d; font-size: 14px; margin-bottom: 15px;">
                                    Leave these fields blank if you do not want to change your password. New passwords must be at least 8 characters and include 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character.
                                </p>

                                <div id="passwordError" class="alert alert-danger d-none" role="alert" style="font-size: 14px;">
                                    <i class="fas fa-exclamation-circle"></i> <span id="passwordErrorMsg"></span>
                                </div>

                                <div class="password-requirements d-none" id="passwordRequirements">
                                    <h6><i class="fas fa-check-circle"></i> Password Requirements</h6>
                                    <div class="requirement-item unmet" id="req-length"><i class="fas fa-times"></i> At least 8 characters</div>
                                    <div class="requirement-item unmet" id="req-uppercase"><i class="fas fa-times"></i> At least 1 uppercase letter</div>
                                    <div class="requirement-item unmet" id="req-lowercase"><i class="fas fa-times"></i> At least 1 lowercase letter</div>
                                    <div class="requirement-item unmet" id="req-number"><i class="fas fa-times"></i> At least 1 number</div>
                                    <div class="requirement-item unmet" id="req-special"><i class="fas fa-times"></i> At least 1 special character</div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-label">Current Password</label>
                                            <input type="password" class="form-control" name="currentPassword" id="currentPassword" placeholder="Enter current password">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-label">New Password</label>
                                            <input type="password" class="form-control" name="newPassword" id="newPassword" minlength="8" placeholder="Min 8 chars with requirements">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-label">Confirm New Password</label>
                                            <input type="password" class="form-control" name="confirmNewPassword" id="confirmNewPassword" minlength="8" placeholder="Confirm password">
                                            <small class="text-success d-none" id="passwordMatchSuccess"><i class="fas fa-check-circle"></i> Passwords match</small>
                                            <small class="text-danger d-none" id="passwordMismatchError"><i class="fas fa-exclamation-circle"></i> Passwords do not match</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="otp-section" id="otpSection">
                                    <h6 style="margin-bottom: 8px; color: #856404;"><i class="fas fa-info-circle"></i> Email Verification Required</h6>
                                    <p style="margin: 8px 0; color: #856404; font-size: 13px;">An OTP has been sent to your email. Enter it to confirm the password change.</p>
                                    <div class="form-group" style="margin-top: 8px;">
                                        <label class="form-label" style="color: #856404;">Verification OTP</label>
                                        <input type="text" class="form-control" name="passwordOTP" id="passwordOTP" placeholder="Enter 6-digit OTP" maxlength="6" style="font-weight: 600; letter-spacing: 4px; text-align: center;">
                                        <small class="text-muted" id="otpTimer" style="margin-top: 5px; display: none;">OTP expires in: <span id="timerCount">10:00</span></small>
                                    </div>
                                </div>

                                <div style="margin-top: 12px;">
                                    <button type="button" class="btn btn-send-otp" id="sendOtpBtn" style="display: none;">
                                        <i class="fas fa-envelope"></i> Send Verification OTP to Email
                                    </button>
                                    <small class="text-muted d-block" style="margin-top: 6px;" id="otpHelpText">Enter your current password and new password, then click above to receive an OTP.</small>
                                </div>
                            </div>

                            <div class="text-center" style="margin-top: 24px;">
                                <button type="submit" class="btn btn-edit" id="submitBtn">
                                    <i class="fas fa-save"></i> Update Profile
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script nonce="{{cspNonce}}">
        const socket = io();

        socket.on('profileUpdate', (data) => {
            if (data.message) {
                console.log('Profile update notice:', data.message);
            }
        });

        const form = document.getElementById('profileForm');
        const newPasswordEl = document.getElementById('newPassword');
        const confirmNewPasswordEl = document.getElementById('confirmNewPassword');
        const currentPasswordEl = document.getElementById('currentPassword');
        const passwordError = document.getElementById('passwordError');
        const passwordErrorMsg = document.getElementById('passwordErrorMsg');
        const passwordRequirements = document.getElementById('passwordRequirements');
        const sendOtpBtn = document.getElementById('sendOtpBtn');
        const otpSection = document.getElementById('otpSection');
        const passwordOTPEl = document.getElementById('passwordOTP');
        const submitBtn = document.getElementById('submitBtn');
        const passwordRule = /^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[^A-Za-z0-9]).{8,}$/;
        const csrfTokenInput = document.querySelector('input[name="_csrf"]');
        const csrfToken = csrfTokenInput ? csrfTokenInput.value : '';

        function hidePasswordError() {
            passwordError.classList.add('d-none');
            passwordErrorMsg.textContent = '';
        }

        function showPasswordError(msg) {
            passwordErrorMsg.textContent = msg;
            passwordError.classList.remove('d-none');
        }

        function updateRequirement(id, met) {
            const el = document.getElementById(id);
            if (!el) return;
            if (met) {
                el.classList.remove('unmet');
                el.classList.add('met');
                el.querySelector('i').className = 'fas fa-check-circle';
            } else {
                el.classList.add('unmet');
                el.classList.remove('met');
                el.querySelector('i').className = 'fas fa-times-circle';
            }
        }

        newPasswordEl.addEventListener('input', function() {
            const pwd = this.value;
            if (pwd.length > 0) {
                passwordRequirements.classList.remove('d-none');
            } else {
                passwordRequirements.classList.add('d-none');
            }

            const hasLength = pwd.length >= 8;
            const hasUppercase = /[A-Z]/.test(pwd);
            const hasLowercase = /[a-z]/.test(pwd);
            const hasNumber = /\d/.test(pwd);
            const hasSpecial = /[^A-Za-z0-9]/.test(pwd);

            updateRequirement('req-length', hasLength);
            updateRequirement('req-uppercase', hasUppercase);
            updateRequirement('req-lowercase', hasLowercase);
            updateRequirement('req-number', hasNumber);
            updateRequirement('req-special', hasSpecial);

            const allMet = hasLength && hasUppercase && hasLowercase && hasNumber && hasSpecial;
            if (allMet && currentPasswordEl.value && confirmNewPasswordEl.value === pwd) {
                sendOtpBtn.style.display = 'inline-block';
            } else {
                sendOtpBtn.style.display = 'none';
            }
        });

        confirmNewPasswordEl.addEventListener('input', function() {
            const newPwd = newPasswordEl.value;
            const confirmPwd = this.value;

            if (confirmPwd && newPwd) {
                if (newPwd === confirmPwd) {
                    document.getElementById('passwordMatchSuccess').classList.remove('d-none');
                    document.getElementById('passwordMismatchError').classList.add('d-none');
                    if (passwordRule.test(newPwd) && currentPasswordEl.value) {
                        sendOtpBtn.style.display = 'inline-block';
                    }
                } else {
                    document.getElementById('passwordMatchSuccess').classList.add('d-none');
                    document.getElementById('passwordMismatchError').classList.remove('d-none');
                    sendOtpBtn.style.display = 'none';
                }
            } else {
                document.getElementById('passwordMatchSuccess').classList.add('d-none');
                document.getElementById('passwordMismatchError').classList.add('d-none');
            }
        });

        currentPasswordEl.addEventListener('input', function() {
            const newPwd = newPasswordEl.value;
            const confirmPwd = confirmNewPasswordEl.value;
            if (passwordRule.test(newPwd) && confirmPwd === newPwd && this.value) {
                sendOtpBtn.style.display = 'inline-block';
            } else {
                sendOtpBtn.style.display = 'none';
            }
        });

        sendOtpBtn.addEventListener('click', async function() {
            const currentPassword = currentPasswordEl.value.trim();
            if (!currentPassword) {
                showPasswordError('Enter your current password');
                return;
            }

            sendOtpBtn.disabled = true;
            sendOtpBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending OTP...';

            try {
                const response = await fetch('/tenant/profile/send-password-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'CSRF-Token': csrfToken,
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ currentPassword })
                });

                let result = {};
                try {
                    result = await response.json();
                } catch (_) {
                    // Non-JSON response (e.g., CSRF failure) will be handled generically below
                }

                if (!response.ok || !result.success) {
                    showPasswordError(result.message || 'Failed to send OTP');
                    return;
                }

                if (result.success) {
                    otpSection.classList.add('show');
                    document.getElementById('otpTimer').style.display = 'block';
                    passwordOTPEl.focus();
                    startOTPTimer();
                    hidePasswordError();
                }
            } catch (error) {
                console.error('Error sending OTP:', error);
                showPasswordError('An error occurred. Please try again.');
            } finally {
                sendOtpBtn.disabled = false;
                sendOtpBtn.innerHTML = '<i class="fas fa-envelope"></i> Send Verification OTP to Email';
            }
        });

        function startOTPTimer() {
            let timeRemaining = 600;
            const timerCount = document.getElementById('timerCount');
            const timer = setInterval(() => {
                timeRemaining--;
                const minutes = Math.floor(timeRemaining / 60);
                const seconds = timeRemaining % 60;
                timerCount.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;

                if (timeRemaining <= 0) {
                    clearInterval(timer);
                    otpSection.classList.remove('show');
                    document.getElementById('otpTimer').style.display = 'none';
                    passwordOTPEl.value = '';
                    showPasswordError('OTP has expired. Please click "Send Verification OTP" again.');
                }
            }, 1000);
        }

        form.addEventListener('submit', function(e) {
            hidePasswordError();
            const newPassword = newPasswordEl.value.trim();
            const confirmNewPassword = confirmNewPasswordEl.value.trim();
            const currentPassword = currentPasswordEl.value.trim();
            const passwordOTP = passwordOTPEl.value.trim();

            if (newPassword || confirmNewPassword || currentPassword) {
                if (!currentPassword) {
                    e.preventDefault();
                    showPasswordError('Enter your current password to change it');
                    currentPasswordEl.focus();
                    return;
                }

                if (!newPassword || !confirmNewPassword) {
                    e.preventDefault();
                    showPasswordError('Please fill in both new password fields');
                    newPasswordEl.focus();
                    return;
                }

                if (!passwordRule.test(newPassword)) {
                    e.preventDefault();
                    showPasswordError('Password must be 8+ characters with 1 uppercase, 1 lowercase, 1 number, and 1 special character');
                    newPasswordEl.focus();
                    return;
                }

                if (newPassword !== confirmNewPassword) {
                    e.preventDefault();
                    showPasswordError('New passwords do not match');
                    confirmNewPasswordEl.focus();
                    return;
                }

                if (newPassword === currentPassword) {
                    e.preventDefault();
                    showPasswordError('New password must be different from your current password');
                    newPasswordEl.focus();
                    return;
                }

                if (otpSection.classList.contains('show')) {
                    if (!passwordOTP) {
                        e.preventDefault();
                        showPasswordError('Please enter the OTP sent to your email');
                        passwordOTPEl.focus();
                        return;
                    }
                    if (!/^\d{6}$/.test(passwordOTP)) {
                        e.preventDefault();
                        showPasswordError('OTP must be a 6-digit number');
                        passwordOTPEl.focus();
                        return;
                    }
                }
            }
        });

        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        socket.on('connect', () => {
            console.log('Real-time connection established');
        });

        socket.on('disconnect', () => {
            console.log('Real-time connection lost');
        });
    </script>
