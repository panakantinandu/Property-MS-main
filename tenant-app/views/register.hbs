<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="{{csrfToken}}">
    <title>Tenant Registration - LeaseHub</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 30px 0;
        }
        .registration-container {
            max-width: 900px;
            width: 100%;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            padding: 40px;
        }
        .registration-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .registration-header h2 {
            color: #667eea;
            font-weight: 700;
            margin-bottom: 10px;
        }
        .form-section {
            margin-bottom: 30px;
            padding-bottom: 30px;
            border-bottom: 2px solid #f0f0f0;
        }
        .form-section:last-child {
            border-bottom: none;
        }
        .form-section h5 {
            color: #667eea;
            margin-bottom: 20px;
            font-weight: 600;
        }
        .btn-register {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 10px;
            width: 100%;
            color: white;
        }
        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
        .login-link {
            text-align: center;
            margin-top: 20px;
        }
        .alert {
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="registration-container">
        <div class="registration-header">
            <h2><i class="fas fa-user-plus"></i> Tenant Registration</h2>
            <p class="text-muted">Create your account to browse and apply for properties</p>
        </div>

        {{#if error}}
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> {{error}}
        </div>
        {{/if}}

        <form action="/tenant/register" method="POST" id="registerForm">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="form-section">
                <h5><i class="fas fa-user"></i> Personal Information</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="firstname" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="lastname" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email Address <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="email" name="email" required>
                            <small class="text-success" id="emailSuccess" style="display: none;">
                                <i class="fas fa-check-circle"></i> Email available
                            </small>
                            <small class="text-danger" id="emailError" style="display: none;">
                                <i class="fas fa-exclamation-circle"></i> Email already registered
                            </small>
                            <small class="text-muted" id="emailChecking" style="display: none;">
                                <i class="fas fa-spinner fa-spin"></i> Checking...
                            </small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Phone Number <span class="text-danger">*</span></label>
                            <input type="tel" class="form-control" id="phone" name="phone" required pattern="[0-9]{10}" placeholder="10-digit mobile number">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <input type="date" class="form-control" name="dob">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Gender</label>
                            <select class="form-control" name="gender">
                                <option value="">Select Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h5><i class="fas fa-briefcase"></i> Professional Details</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Occupation</label>
                            <input type="text" class="form-control" name="occupation" placeholder="e.g. Software Engineer">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Company Name</label>
                            <input type="text" class="form-control" name="companyName">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Current Address</label>
                    <textarea class="form-control" name="currentAddress" rows="2" placeholder="Your current residential address"></textarea>
                </div>
            </div>

            <div class="form-section">
                <h5><i class="fas fa-lock"></i> Account Credentials</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tenant ID (Username) <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="tenantid" name="tenantid" required placeholder="e.g. TENANT001" pattern="[A-Za-z0-9_]{4,20}">
                            <small class="text-success" id="tenantidSuccess" style="display: none;">
                                <i class="fas fa-check-circle"></i> Tenant ID available
                            </small>
                            <small class="text-danger" id="tenantidError" style="display: none;">
                                <i class="fas fa-exclamation-circle"></i> Tenant ID already taken
                            </small>
                            <small class="text-muted" id="tenantidChecking" style="display: none;">
                                <i class="fas fa-spinner fa-spin"></i> Checking...
                            </small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Password <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input type="password" class="form-control" name="password" required minlength="8" id="password" placeholder="Enter your password">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="fas fa-eye" id="passwordIcon"></i>
                                    </button>
                                </div>
                            </div>
                            <small class="form-text text-muted">Minimum 8 characters with 1 uppercase, 1 number, and 1 special character</small>
                            <small class="text-danger" id="passwordRule" style="display: none;">
                                <i class="fas fa-exclamation-circle"></i> Password must have 8+ chars, 1 uppercase, 1 number, 1 special character
                            </small>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Confirm Password <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <input type="password" class="form-control" name="confirmPassword" required minlength="8" id="confirmPassword">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                <i class="fas fa-eye" id="confirmPasswordIcon"></i>
                            </button>
                        </div>
                    </div>
                    <small class="text-success" id="passwordMatch" style="display: none;">
                        <i class="fas fa-check-circle"></i> Passwords match
                    </small>
                    <small class="text-danger" id="passwordMismatch" style="display: none;">
                        <i class="fas fa-exclamation-circle"></i> Passwords do not match
                    </small>
                </div>
            </div>

            <div class="form-section">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="terms" name="terms" required>
                    <label class="custom-control-label" for="terms">
                        I agree to the terms and conditions and privacy policy <span class="text-danger">*</span>
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-register">
                <i class="fas fa-user-plus"></i> Create Account
            </button>

            <div class="login-link">
                <p class="text-muted">Already have an account? <a href="/tenant/login/form" class="font-weight-bold">Login here</a></p>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script nonce="{{cspNonce}}">
        const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content');
        let emailValid = false;
        let tenantidValid = false;
        
        $(document).ready(function() {
            console.log("Registration form ready");
            const passwordRule = /^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[^A-Za-z0-9]).{8,}$/; // upper, lower, number, special
            
            // Custom phone number validation message
            const phoneInput = document.getElementById('phone');
            if (phoneInput) {
                phoneInput.addEventListener('invalid', function(e) {
                    if (this.validity.patternMismatch) {
                        this.setCustomValidity('Phone number must be exactly 10 digits');
                    } else if (this.validity.valueMissing) {
                        this.setCustomValidity('Phone number is required');
                    } else {
                        this.setCustomValidity('');
                    }
                });
                
                phoneInput.addEventListener('input', function() {
                    this.setCustomValidity('');
                });
            }
            
            // Password visibility toggles
            $('#togglePassword').on('click', function(e) {
                e.preventDefault();
                const passwordField = $('#password');
                const icon = $('#passwordIcon');
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
            
            $('#toggleConfirmPassword').on('click', function(e) {
                e.preventDefault();
                const confirmField = $('#confirmPassword');
                const icon = $('#confirmPasswordIcon');
                if (confirmField.attr('type') === 'password') {
                    confirmField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    confirmField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
            
            // Real-time email validation
            let emailTimeout;
            $('#email').on('blur', function() {
                clearTimeout(emailTimeout);
                const email = $(this).val().trim();
                console.log("Email blur, checking:", email);
                
                // Reset messages
                $('#emailChecking').css('display', 'none');
                $('#emailSuccess').css('display', 'none');
                $('#emailError').css('display', 'none');
                
                if (email.length > 3 && email.includes('@')) {
                    // Show checking
                    $('#emailChecking').css('display', 'block');
                    console.log("Making AJAX call for:", email);
                    
                    $.ajax({
                        url: '/tenant/check-email',
                        method: 'POST',
                        contentType: 'application/json',
                        headers: csrfToken ? { 'X-CSRF-Token': csrfToken } : undefined,
                        data: JSON.stringify({ email: email }),
                        success: function(response) {
                            console.log("Response received:", response);
                            $('#emailChecking').css('display', 'none');
                            
                            if (response.available) {
                                console.log("Email available");
                                $('#emailSuccess').css('display', 'block');
                                $('#emailError').css('display', 'none');
                                $('#email').removeClass('is-invalid').addClass('is-valid');
                                emailValid = true;
                            } else {
                                console.log("Email exists");
                                $('#emailSuccess').css('display', 'none');
                                $('#emailError').css('display', 'block');
                                $('#email').removeClass('is-valid').addClass('is-invalid');
                                emailValid = false;
                            }
                        },
                        error: function(jqXHR, textStatus, errorThrown) {
                            console.error("AJAX error:", textStatus, errorThrown);
                            $('#emailChecking').css('display', 'none');
                            $('#emailError').css('display', 'block');
                            $('#emailError').html('<i class="fas fa-exclamation-circle"></i> Error checking email');
                            emailValid = false;
                        }
                    });
                } else {
                    emailValid = false;
                }
            });
            
            // Real-time tenant ID validation
            let tenantidTimeout;
            $('#tenantid').on('blur', function() {
                clearTimeout(tenantidTimeout);
                const tenantid = $(this).val().trim();
                
                $('#tenantidChecking').css('display', 'none');
                $('#tenantidSuccess').css('display', 'none');
                $('#tenantidError').css('display', 'none');
                
                if (tenantid.length >= 4) {
                    $('#tenantidChecking').css('display', 'block');
                    
                    $.ajax({
                        url: '/tenant/check-tenantid',
                        method: 'POST',
                        contentType: 'application/json',
                        headers: csrfToken ? { 'X-CSRF-Token': csrfToken } : undefined,
                        data: JSON.stringify({ tenantid: tenantid }),
                        success: function(response) {
                            $('#tenantidChecking').css('display', 'none');
                            
                            if (response.available) {
                                $('#tenantidSuccess').css('display', 'block');
                                $('#tenantidError').css('display', 'none');
                                $('#tenantid').removeClass('is-invalid').addClass('is-valid');
                                tenantidValid = true;
                            } else {
                                $('#tenantidSuccess').css('display', 'none');
                                $('#tenantidError').css('display', 'block');
                                $('#tenantid').removeClass('is-valid').addClass('is-invalid');
                                tenantidValid = false;
                            }
                        },
                        error: function() {
                            $('#tenantidChecking').css('display', 'none');
                            $('#tenantidError').css('display', 'block');
                            tenantidValid = false;
                        }
                    });
                } else {
                    tenantidValid = false;
                }
            });
            
            // Password confirmation validation
            $('#confirmPassword').on('input', function() {
                const password = $('#password').val();
                const confirmPassword = $(this).val();
                
                if (confirmPassword.length > 0) {
                    if (password === confirmPassword) {
                        $(this).removeClass('is-invalid').addClass('is-valid');
                        $('#passwordMatch').show();
                        $('#passwordMismatch').hide();
                    } else {
                        $(this).removeClass('is-valid').addClass('is-invalid');
                        $('#passwordMatch').hide();
                        $('#passwordMismatch').show();
                    }
                } else {
                    $('#passwordMatch').hide();
                    $('#passwordMismatch').hide();
                }
            });

            function validatePasswordStrength() {
                const pwd = $('#password').val();
                if (!passwordRule.test(pwd)) {
                    $('#passwordRule').show();
                    $('#password').addClass('is-invalid').removeClass('is-valid');
                    return false;
                }
                $('#passwordRule').hide();
                $('#password').removeClass('is-invalid').addClass('is-valid');
                return true;
            }

            $('#password').on('input', function() {
                validatePasswordStrength();
                $('#confirmPassword').trigger('input');
            });
            
            // Form submission validation
            $('#registerForm').on('submit', function(e) {
                const password = $('#password').val();
                const confirmPassword = $('#confirmPassword').val();

                if (!validatePasswordStrength()) {
                    e.preventDefault();
                    $('#password').focus();
                    return false;
                }
                
                if (password !== confirmPassword) {
                    e.preventDefault();
                    $('#passwordMismatch').show();
                    $('#passwordMatch').hide();
                    $('#confirmPassword').addClass('is-invalid').focus();
                    return false;
                }
                
                if (!emailValid) {
                    e.preventDefault();
                    alert('Please use a valid and available email address!');
                    return false;
                }
                
                if (!tenantidValid) {
                    e.preventDefault();
                    alert('Please use a valid and available tenant ID!');
                    return false;
                }
            });
        });
    </script>
</body>
</html>
